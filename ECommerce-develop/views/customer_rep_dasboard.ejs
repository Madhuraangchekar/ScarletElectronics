<!DOCTYPE html>
<html>

<head>
    <meta charset="ISO-8859-1">
    <title>Customer Representative Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="../public/landing_page/app/scss/style.css">
</head>

<body>
    <%- include('Common/cr_header2.ejs') %>
    <div align="center">
        <br> <br>
        <h1 class="text-center mx-auto">Customer Representative Dashboard</h1>
        <br>
    </div> 
    <div align="center">
        <br>
        <h2 class="text-primary text-left mx-auto">Requests Claimed by Me</h2>
        <%if(typeof serializedRequests !== 'undefined' && serializedRequests !== 'null'){%>
            <table class="table table-bordered" id="endUserRequests" cellspacing="0" width="100%">
                <thead>
                    <th width="5%">Request ID</th>
                    <th width="10%">User</th>
                    <th width="5%">Listing ID</th>
                    <th>Description</th>
                    <th width="10%">Created On</th>
                    <th width="2%">Status</th>
                    <th>CR</th>
                    <th>Updated On</th>
                </thead>
                <tbody>
                    
                    <%serializedRequests.forEach((y) => {%>
                        <tr>
                            <td><%=y.requestId%></td>
                            <td><%=y.userId%></td>
                            <td><%=y.listingId%></td>
                            <td><a href=/customer_representative/thread><%=y.updateDescription%></a></td>
                            <td><%=y.createdOn%></td>
                            <td><%=y.currentStatus%></td>
                            <td><%=y.customerRep%></td>
                            <td><%=y.updatedOn%></td>
                                                  
                        </th>
                    <%})%>
                    <%}%>
                </tbody>
            </table>
        <br>
    </div>
    <!-- <div>
        <br>
        <form method="GET" action="/customer_representative/show-all-request">
            <button type="submit" class="btn btn-primary align-self-center">View All Requests</button>
        </form>
        <form method="GET" action="/customer_representative/rep_listings">
            <button type="submit" class="btn btn-primary align-self-center">View All Listngs</button>
        </form>
    </div> -->
    <div style="display: flex; gap: 10px;">
        <form method="GET" action="/customer_representative/show-all-request">
            <button type="submit" class="btn btn-primary align-self-center">View All Requests</button>
        </form>
        <form method="GET" action="/customer_representative/rep_listings">
            <button type="submit" class="btn btn-primary align-self-center">View All Listings</button>
        </form>
    </div>
    
</body>

</html>
