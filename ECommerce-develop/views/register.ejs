    <script>
        function phoneNumberCheck() {
            var validator = /^\d{10}$/;
            var phone_num = document.getElementById("phoneNr").value;

            if (!validator.test(phone_num)) {
                alert("Phone must contain only 10 Numbers.")
                return false;
            }
            return true;
        }


        function passid_validation(mx, my) {
            var strongPasswordRegex = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{7,}$/;
            var passid = document.getElementById("password").value;

            var passid_len = passid.length;
            if (passid_len == 0) {
                alert("Password should not be empty");
                //document.registration.passid.focus();
                return false;
            }
            else if (passid_len >= my || passid_len < mx) {
                alert("Password Length should be between " + mx + " to " + my);
                //document.registration.passid.focus();
                return false;
            }
            else if (!strongPasswordRegex.test(passid)) {
                alert("Password not satisfy all the criteria");
                //document.registration.passid.focus();
                return false;
            }
            return true;
        }



        function allLetter() {
            var uname = document.getElementById("name");

            //var uname = document.getElementById('name').value;
            console.log(uname);

            var letters = /^[a-zA-Z ]*$/;
            if (uname.value.match(letters)) {
                return true;
            }
            alert('Username must have alphabet characters only');
            // document.registration.name.focus();
            return false;
        }


        function validateEmail() {
            var uemail = document.getElementById('emailId').value;
            console.log(uemail);

            var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (uemail.match(mailformat)) {
                return true;
            }
            alert("You have entered an invalid email address!");
            //document.registration.uemail.focus();
            return false;
        }


        function cpassid_validation() {
            var passid = document.getElementById('password').value;
            var cpassid = document.getElementById('cpassword').value;

            if (passid == cpassid) {
                return true
            }
            alert("Password and Confirm Password do not match!");
            return false;
        }

        function formValidation() {
            var uemail = document.getElementById("emailId");
            var uname = document.getElementById("name");
            var passid = document.getElementById("password");
            var cpassid = document.getElementById("cpassword");
            var err_para = document.getElementById("err_para");

            if (uemail.value == '' || uname.value == '' || passid.value == '' || cpassid.value == '') {
                alert("You have missed mandatory field(s)");
                return false;
            }

            if (allLetter() && validateEmail() && passid_validation(7, 12) && cpassid_validation() && phoneNumberCheck()) {
                console.log("Insise");
                return true;
            }
            err_para.innerHTML = "Please Fill all the details carefully!!"
            return false;
        }


